    body
        header
            .container
                a.logo(href="#")
                    span.logo__name Freshy
                    img.leaf(src="./icons/leaf.png" alt="")
        section.hero
            .container.container--hero
                h1.hero__title Fresh foods everyday! 
        .container.container--main
            main.main
                form.form--search(id="form" role="search" autocomplete="off")
